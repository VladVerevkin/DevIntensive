<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:id="@+id/content_record2"
   app:layout_behavior="@string/appbar_scrolling_view_behavior"
   tools:context=".ui.activities.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/grey">

<!--reit-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reit_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 \n Рейтинг"
                android:enabled="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:gravity="center"
                android:focusable="false"
                android:fontFamily="sans-serif-condensed"
                />
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <View
            android:layout_width="@dimen/Line_size_1"
            android:layout_height="match_parent"
            android:background="@color/grey_light"
            android:layout_marginBottom="@dimen/Layout_mar_left_16"
            android:layout_marginTop="@dimen/Layout_mar_left_16"/>

<!--cod-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                  <EditText
                    android:id="@+id/cod_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 \n Написанно строк кода"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:focusable="false"
                    android:fontFamily="sans-serif-condensed"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <View
            android:layout_width="@dimen/Line_size_1"
            android:layout_height="match_parent"
            android:background="@color/grey_light"
            android:layout_marginBottom="@dimen/Layout_mar_left_16"
            android:layout_marginTop="@dimen/Layout_mar_left_16"/>

<!--project-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/project_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 \nПроектов"
                    android:gravity="center"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:focusable="false"
                    android:fontFamily="sans-serif-condensed"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

</LinearLayout>



    <!--Мобильный телефон-->
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/Baseline_grid_8"
    android:layout_marginBottom="@dimen/Baseline_grid_8" >

    <ImageView
        style="@style/icon.left"
        android:src="@drawable/ic_call_black_24dp"/>

     <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/Layout_height_72"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/Layout_mar_left_32"
        android:layout_marginRight="@dimen/Layout_mar_right_16">

         <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >


             <EditText
                 android:id="@+id/phone_et"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="Мобильный телефон"
                 android:inputType="phone"
                 android:text="+7(988)248-00-38"
                 android:enabled="false"
                 android:textColor="@color/black"
                 android:textColorHint="@color/grey"
                 android:focusable="false"
                 android:fontFamily="sans-serif-condensed"
                 />
         </android.support.design.widget.TextInputLayout>

    </LinearLayout>

     <ImageView
         style="@style/icon.right"
         android:src="@drawable/ic_phone_in_talk_black_24dp"
         />
     
 </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/Line_size_1"
    android:background="@color/grey_light"
    android:layout_marginLeft="@dimen/Layout_mar_left_72"/>

<!--Email-->
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/Baseline_grid_8"
        android:layout_marginBottom="@dimen/Baseline_grid_8" >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/Layout_height_72"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/Layout_mar_left_32"
            android:layout_marginRight="@dimen/Layout_mar_right_16">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:text="vlad.verevkin@gmail.com"
                    android:focusable="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:fontFamily="sans-serif-condensed"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_size_1"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/Layout_mar_left_72"/>


    <!--VK.COM-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/Baseline_grid_8"
        android:layout_marginBottom="@dimen/Baseline_grid_8" >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/vk_circle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/Layout_height_72"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/Layout_mar_left_32"
            android:layout_marginRight="@dimen/Layout_mar_right_16">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/vkcom_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Профиль в VK"
                    android:inputType="text"
                    android:text="vk.com/Vlad_Verevkin"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:focusable="false"
                    android:textColorHint="@color/grey"
                    android:fontFamily="sans-serif-condensed"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line_size_1"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/Layout_mar_left_72"/>


    <!--GITHUB-->
